<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".WeatherInfoFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/weatherImageID"
                android:layout_width="190dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:adjustViewBounds="true"
                android:background="@drawable/pic_background"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ico"
                android:tint="#FFF" />

            <LinearLayout
                android:layout_marginTop="35dp"
                android:layout_below="@+id/weatherImageID"
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/weatherStatusID"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:text="Status"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/weatherDescriptionID"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:text="Weather Dwscription"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l1"
                android:layout_marginTop="40dp"
                android:gravity="center|end"
                android:paddingRight="30dp">

                <TextView
                    android:id="@+id/weatherTempID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="30"
                    android:textSize="38sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_toRightOf="@+id/weatherTempID"
                    android:paddingLeft="10dp"
                    android:src="@drawable/thermometer"
                    android:tint="#E91E63" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r1"
                android:layout_marginTop="15dp"
                android:gravity="center|end"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/imageHumidity"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/humidity"
                    android:tint="#673AB7" />

                <TextView
                    android:id="@+id/weatherHumidityID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/imageHumidity"
                    android:paddingLeft="10dp"
                    android:text="30"
                    android:textSize="38sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r2"
                android:layout_marginTop="15dp"
                android:gravity="center|end"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/imagePre"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/pressure"
                    android:tint="#3F51B5" />

                <TextView
                    android:id="@+id/weatherPresssureID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/imagePre"
                    android:paddingLeft="10dp"
                    android:text="30"
                    android:textSize="38sp"
                    android:textStyle="bold" />


            </RelativeLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>